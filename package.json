{
  "name": "simple-calculator",
  "version": "2.0.0",
  "description": "the best calculator ever made",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "simple-calculator",
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "uninstallDisplayName": "simple-calculator-uninstall",
      "license": "license.md",
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": "Alberto Araujo",
  "license": "ISC",
  "devDependencies": {
    "electron": "^18.2.4",
    "electron-builder": "^23.0.3"
  }
}
